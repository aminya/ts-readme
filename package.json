{
  "name": "ts-readme",
  "version": "1.1.3",
  "description": "Generate docs from typescript + jsdoc and put it in a README",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist",
  "author": "Andrew Lisowski lisowski54@gmail.com",
  "sideEffects": false,
  "contributors": [
    "Andrew Lisowski lisowski54@gmail.com"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT",
  "bin": "bin/ts-readme.cjs",
  "type": "module",
  "scripts": {
    "clean": "shx rm -rf dist",
    "build": "run-s clean build.tsc build.cjs",
    "build.tsc": "tsc --pretty",
    "build.cjs": "babel -d dist/cjs/ dist/esm/ --out-file-extension .cjs",
    "start": "tsc -pretty --watch",
    "test": "cross-env NODE_OPTIONS='--experimental-vm-modules --disable-warning=ExperimentalWarning' jest",
    "lint": "ds lint",
    "format": "prettier --write .",
    "docs": "./bin/ts-readme.cjs --header-depth 4 --matcher TS-README-GENERATED"
  },
  "files": [
    "dist",
    "bin",
    "!*.test.*",
    "!__snapshots__",
    "!__tests__"
  ],
  "dependencies": {
    "command-line-application": "^0.10.1",
    "fast-glob": "^3.3.2",
    "prettier": "3.3.3"
  },
  "peerDependencies": {
    "typescript": ">= 3.x"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "11.2.0",
    "@auto-it/first-time-contributor": "11.2.0",
    "@design-systems/cli": "4.15.4",
    "@types/prettier": "^3.0.0",
    "auto": "11.2.0",
    "husky": "9.1.4",
    "lint-staged": "15.2.9",
    "typescript": "5.5.4",
    "jest": "29.7.0",
    "@swc/jest": "0.2.36",
    "@swc/core": "1.7.11",
    "cross-env": "7.0.3",
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "babel-plugin-replace-import-extension": "^1.0.0",
    "shx": "0.3.4",
    "npm-run-all2": "6.2.2"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx,jsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "first-time-contributor"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": 10
          }
        }
      ]
    ],
    "plugins": [
      [
        "babel-plugin-replace-import-extension",
        {
          "extMapping": {
            ".js": ".cjs"
          }
        }
      ]
    ]
  }
}
