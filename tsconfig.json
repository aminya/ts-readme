{
  "include": ["src/**/*", "typings/**/*", "*.ts", "jest.config.js"],

  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "composite": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "module": "NodeNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  }
}
